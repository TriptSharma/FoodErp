<div class="form-horizontal" ng-controller="customerController">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
@*    <hr />*@    
    <form id="form">
        <div class="form-group">
            <label>Customer Name</label>
            <input type="text" ng-model="newCustomer.CustomerName" class="form-control" />
        </div>

        <div class="form-group">
            <label>Store ID</label>
            <input type="number" ng-model="newCustomer.Store.StoreId" class="form-control" />
        </div>

        <div class="form-group">
            <label>Purchase</label>
            <input type="number" min="1" , step="any" ng-model="newCustomer.Purchase" class="form-control" />
        </div>

        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Customer" class="btn btn-primary" ng-click="create()" />
            </div>
        </div>
    </form>
</div>


